/* pages/automap/automap.wxss */
.flex-style{
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.flex-item{
  height: 35px; 
  line-height: 35px;
  text-align: center;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1
}
.flex-item.active{
  color:#0091ff;
}
.map_box{
  position:absolute;
  top: 0px;
  bottom: 0px;
  left: 0px;
  right: 0px;
}
#navi_map{
  width: 100%;
  height: 100%;
}
.text_box{
  position:absolute;
  background: #f0f0f0;
  height: 80px;
  bottom: 0px;
  left: 0px;
  right: 0px;
}
.text{
  position: absolute;
  font-size: large;
  left:20px;
  bottom: 30px;
}
.locate{
  position:absolute;
  bottom: 23px;
  right: 70px;
  padding: 3px 5px;
  color: #fff;
  width:80px;
  text-align:center;
  border-radius:5px;
}
.detail{
  position:absolute;
  bottom: 23px;
  right: 10px;
  padding: 3px 5px;
  color: #fff;
  width:50px;
  text-align:center;
  border-radius:5px;
}